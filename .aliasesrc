#vim ft=shell
alias ls="ls --color=auto"
alias ll="ls -lh"
alias l="ll -a"
alias la="ll -a"
alias grub-update="sudo grub-mkconfig -o /boot/grub/grub.cfg"
alias news="newsboat"
alias gs="git status"
alias vim="nvim"
alias vi="nvim"
alias mutt="neomutt"
alias sub="subliminal download -l en"

# dirs
alias my="cd ~/Documents/personal/; vim"

# EC
alias ec="cd ~/Code/Work/spence/expensecheck"
alias wec="workon ec"
alias ec-dev-log="ssh bsure-develop@bsure-develop.expensecheck.com.au tail -f develop.log"
alias ec-qa-log="ssh bsure-qa@bsure-qa.expensecheck.com.au tail -f qa.log"
alias ec-qa-log-dump="ec; echo 'downloading on _logs/qa.log ...'; ssh bsure-qa@bsure-qa.expensecheck.com.au cat qa.log > _logs/qa.log && vim _logs/qa.log"

# CML
alias cml="cd ~/Code/Work/cml"
alias wcml="workon cml"

# docker
alias d-stop="docker stop $(docker ps -q)"
alias d-rm="docker rm $(docker ps -q)"
