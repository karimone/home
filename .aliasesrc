#vim ft=shell
alias ls="ls --color=auto"
alias ll="ls -lh"
alias l="ll -a"
alias la="ll -a"
alias grub-update="sudo grub-mkconfig -o /boot/grub/grub.cfg"
alias news="newsboat"
alias gs="git status"
alias vim="nvim"
alias vi="nvim"
alias mutt="neomutt"
alias sub="subliminal download -l en"
alias tmux="tmux -f ~/.config/tmux/config"
alias mv="mv -v"

# dirs
alias my="cd ~/Documents/personal/; vim"

