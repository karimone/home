#!/bin/sh
HDMI="HDMI-1"
EDP="eDP-1"
P_PATH="$HOME/Pictures/wallpapers/"
P_EXCLUDE="$P_PATH/.git"
COMMAND="find $P_PATH -type f ! -path $P_PATH -size +100k -follow -print | shuf -n 1"

PIC=`eval $COMMAND`
PIC2=`eval $COMMAND`

xwallpaper --output $HDMI --stretch "${PIC}" --output $EDP --stretch "${PIC}"
