# #---Basic Definitions---# #
for_window [class="^.*"] border pixel 4
gaps inner 5
gaps outer 10

# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Set the terminal
#set $term --no-startup-id termite
set $term i3-sensible-terminal

# Rofi application luncher
set $menu rofi -show drun -show-icons
set $window rofi -show window -show-icons

# to get the transparency
exec --no-startup-id xcompmgr -c -f -n

# set the wallpaper
exec --no-startup-id randwall

# call me again when you want
bindsym $mod+w exec --no-startup-id randwall

# notification system
exec --no-startup-id dunst

# font
font pango:Inconsolata, DejaVu Sans Mono, Icons 11

# start a terminal (h)
bindsym $mod+Return split h; exec $term

# start a terminal (v)
bindsym $mod+Shift+Return split v; exec $term

# simulate the screenshot as in Macos
bindsym Alt+Shift+4 exec --no-startup-id scrot -s
bindsym Alt+Shift+3 exec --no-startup-id scrot

# start opera (h)
bindsym $mod+o split h; exec opera

# start opera (h)
bindsym $mod+Shift+o split v; exec opera

# kill focused window
bindsym $mod+Shift+q kill

# start your launcher
bindsym $mod+d exec $menu

bindsym $mod+Shift+d exec $window

# reload the configuration file
bindsym $mod+Shift+c reload

# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# _move_ the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

